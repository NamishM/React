{
    "compilerOptions": {
        "module": "es2015",
        "target": "esnext",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "jsx": "react",
        "strictNullChecks": true,
        "lib": [
          "es5",
          "es6",
          "es7",
          "es2017",
          "dom"
        ],
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "checkJs": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
      "dist",
      "node_modules"
    ]
}
