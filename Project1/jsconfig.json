{
	// See http://go.microsoft.com/fwlink/?LinkId=759670
	// for the documentation about the jsconfig.json format
	"compilerOptions": {
		"target": "es6",
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"baseUrl": ".", // This must be specified if "paths" is.
    "paths": {
      "srs/*": ["src/*"] // This mapping is relative to "baseUrl"
    },
		"module": "commonjs" // https://github.com/Microsoft/vscode/issues/24715#event-1043768026
	},
	"exclude": [
		"node_modules",
		"docsBuild",
		"bower_components",
		"dist",
		"docs",
		"jspm_packages",
		"tmp",
		"temp"
	]
}
